<!--	This launch file handles the point cloud reconstruction and the face recognition software. This file is meant to be launched on a remote workstation. -->

<launch>

	<include file="$(find hostess_full)/launch/include/openni.launch.xml" />
	<include file="$(find hostess_full)/launch/include/people_detection.launch.xml" />
	<include file="$(find hostess_full)/launch/include/skeleton_tracker.launch.xml" />
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find hostess_full)/launch/include/hostess_robot.rviz" />

</launch>
